<section class="input-form"> 
    <div class="row justify-content-around">
        <form class= "card mb-3 border-0 col-md-5 d-flex justify-content-center shadow p-3 mb-5 rounded"action="/new-item" method="post" autocomplete="on">
            <h2>New Item Form</h2>
                <label for="title">Item  Title </label>
                    <input type="text" id="title" name="title" placeholder="My New Item" required>
                <br>
                <label for="price">Price  USD </label>
                    <input min="0" type="number" id="price" name="price" placeholder="Item Price" required>
                <br>
                    <label for="Item">Description</label>
                <input type="text" id="description" name="description" placeholder="Item Description" required>
                <br>
                    <label for="category">Item Category:</label>
                <select name="category" id="category" required>
                    <option value="" selected disabled> --- Choose a Category --- </option>
                    <option value="Men's Clothing">Men's Clothing</option>
                    <option value="Women's Clothing">Women's Clothing</option>
                    <option value="Jewelery">Jewelery</option>
                    <option value="Electronics">Electronics</option>
                </select>
                    <br>
                <label for="image">Image URL</label>
                <input type="url" id="image" name="image" placeholder="URL" required>
                    <br>
                    <br>
                <button type="submit" value="Submit" class="btn btn-outline-dark">Submit</button>
                <button type="reset" class="btn btn-outline-dark">Reset</button>
                <br>
            <br>
        </form>
    </div> 
</section>